<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tree"
    android:orientation="vertical"
    tools:context="com.example.iii.vendingmachine.ActMain">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="355dp"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/drink"
            android:layout_width="358dp"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/drink" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="355dp"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_gravity="center"
            android:id="@+id/temp1"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/temp1" />

        <Spinner
            android:id="@+id/temp2"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/temp2" />

        <Spinner
            android:id="@+id/num"
            android:layout_width="108dp"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/num" />

    </LinearLayout>


    <Button
        android:layout_gravity="center"
        android:id="@+id/btnConfirm"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:background="@android:drawable/bottom_bar"
        android:elevation="0dp"
        android:text="確認購買"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/order"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp" />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="______________交付金額______________"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="0" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="12"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="19"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="3" />

            <Button
                android:id="@+id/button1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="1000" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="12"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="19"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="6" />

            <Button
                android:id="@+id/button500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="500" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="12"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="19"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="9" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="back" />

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="12"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="0" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="19"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="C" />

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/spinner_dropdown_background"
                android:text="-" />
        </TableRow>


        <Button
            android:id="@+id/buttonEqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/spinner_dropdown_background"
            android:text="=" />



    </TableLayout>


</LinearLayout>






